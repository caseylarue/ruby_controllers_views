<h1>These are the users!</h1>

<% if flash[:success]  %>
	<%= flash[:success]  %>
<% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td> <a href="/users/show/<%= user.id %>">Show</a> | <a href="/users/edit/<%= user.id %>">Edit</a> | <a href="/users/destroy/<%= user.id %>">Delete</a></td>
      </tr>
    <% end %>
  </tbody>

</table>

<a href="/users/new"><h3>New User</h3></a>

